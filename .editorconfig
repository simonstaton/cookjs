
# https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8

# Markdown files
# See also .markdownlint.json
# See also .prettierrc.yaml
[*.md]
max_line_length = 80

# Makefile
[Makefile]
indent_style = tab
